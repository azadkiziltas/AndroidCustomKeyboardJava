<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="#ED1C00" android:startColor="@color/red" />
            <corners android:radius="5dp" />

            <stroke android:width="2dp" android:color="@color/darker_grey" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/red_hover" android:startColor="@color/red_hover" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</selector>