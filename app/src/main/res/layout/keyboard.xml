<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="320dp"
        android:layout_height="410dp"
        android:layout_margin="20dp"
        android:background="@drawable/custom_popup"
        android:elevation="10dp">


        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="370dp"
            android:layout_centerInParent="true">


            <LinearLayout
                android:id="@+id/col1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_4"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_7"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <RelativeLayout
                    android:id="@+id/button_delete"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_stop"
                    android:text=""

                    android:textColor="@color/white"
                    android:textSize="40dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/baseline_keyboard_backspace_24" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/col2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/col1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_2"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_5"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_0"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/col3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/col2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_3"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_6"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/button_9"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_memory"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="40dp" />

                <RelativeLayout
                    android:id="@+id/button_enter"

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_hover_active"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="40dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/baseline_login_24" />


                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</merge>
